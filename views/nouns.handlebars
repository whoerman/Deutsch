{{> mainheader}}

<div class="container maincontainer">
    <div class="row m-3">
        <div class="col-2-md mr-4 mt-4">
            <h5>Input a German Noun:</h5>
        </div>
        <div class="col-2-md ml-4 mt-4">
            <h5>Word bank for umlaut: ä ö ü</h5>
        </div>
    </div>
    <form>
        <div class="row m-3">
            <div class="col-2-md">
                <div class="form-group">
                    <label name="gender" for="genderselect">Gender</label>
                    <select class="form-control  text-center" id="genderselect">
                        <option>der</option>
                        <option>die</option>
                        <option>das</option>
                    </select>
                </div>
            </div>
            <div class="col-2-md">
                <div class="form-group mr-4">
                    <label for="singularnoun">New Noun</label>
                    <input type="text" name="singularnoun" class="form-control" id="singularnoun"
                        placeholder="singular form">
                </div>
            </div>
            <div class="col-2-md">
                <div class="form-group">
                    <label for="pluralnoun">Plural</label>
                    <input type="text" name="pluralnoun" class="form-control" id="pluralnoun" placeholder="plural form">
                </div>
            </div>

            <div class="col-2-md ml-4">
                <div class="form-group">
                    <label name="person" for="personselect">Person</label>
                    <select class="form-control  text-center" id="personselect">
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
            </div>
            <div class="col-2-md ml-4">
                <div class="form-group">
                    <label name="animal" for="animalselect">Animal</label>
                    <select class="form-control  text-center" id="animalselect">
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
            </div>
            <div class="col-2-md ml-4">
                <div class="form-group">
                    <label name="thing" for="thingselect">Thing</label>
                    <select class="form-control  text-center" id="thingselect">
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
            </div>
            <div class="col-2-md ml-4">
                <div class="form-group">
                    <label name="place" for="placeselect">Place</label>
                    <select class="form-control  text-center" id="placeselect">
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row ml-3">
            <h5>Situations where the word might be used (can be broad):</h5>
        </div>
        <div class="row">
            <div class ="col-2-md ml-4">
