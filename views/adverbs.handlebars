{{> mainheader}}

<div class="container maincontainer">
    <div class="row justify-content-center m-3">
        <div class="col-2-md mr-4 mt-4">
            <h5>Input a German Adverb:</h5>
        </div>
        <div class="col-2-md ml-4 mt-4">
            <h5>Word bank for umlaut: ä ö ü</h5>
        </div>
    </div>
    <form>
        <div class="row justify-content-center m-3">
            <div class="col-2-md">
                <div class="form-group mr-4">
                    <label for="adverb">New Adverb</label>
                    <input type="text" name="adverb" class="form-control" id="adverb" placeholder="singular form">
                </div>
            </div>
            <div class="col-2-md">
                <div class="form-group">
                    <label for="englishdefinition">English definition</label>
                    <input type="text" name="englishdefinition" class="form-control" id="englishdefinition"
                        placeholder="English definitions...">
                </div>
            </div>
            <div class="col-2-md ml-4">
                <div class="form-group">
                    <label name="adverbtype" for="adverbtype">Adverb type</label>
                    <select class="form-control  text-center" id="adverbtype">
                        <option>Locative (where or direction)</option>
                        <option>Temporal (time)</option>
                        <option>Modal (how or how much)</option>
                        <option>Causal (reason or origin)</option>
                    </select>
                </div>
            </div>
        </div>
    </form>

    <div class="row justify-content-center">
        {{> situations}}
    </div>


    <div class="row justify-content-end">
        <div class="col-2-md m-4">
            <input id="newAdverb" class="btn btn-primary" type="button" value="Submit">
        </div>
    </div>

</div>

<script src="../assets/js/adverbs.js"></script>